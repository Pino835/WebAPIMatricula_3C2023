@model IEnumerable<UI.WebMatricula3C2023.Models.Departamento.Salida.DatosDepartamento>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <br />
    <h2>Gestión de estudiantes</h2>

    <div class="container-fluid">
        <br />
        <div style="width:100%; margin:0 auto;">
            <button id='btnAbrirDialogAgregarDepartamento' class="btn btn-primary" style="background-color: #1A2DF3; width:10%">Agregar</button>
            <br /><br />
            <table class="display" id="DepartamentosTabla" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>NombreDirector</th>
                        <th>HorarioAtencionAtencion</th>
                        <th>AulaAtencion</th>
                        <th>CodigoProfesor</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id='NombreParam'>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td id='NombreDirectorParam'>
                                @Html.DisplayFor(modelItem => item.NombreDirector)
                            </td>
                            <td id='HorarioAtencionParam'>
                                @Html.DisplayFor(modelItem => item.HorarioAtencion)
                            </td>
                            <td id='AulaAtencionParam'>
                                @Html.DisplayFor(modelItem => item.AulaAtencion)
                            </td>
                            <td id='EstadoParam'>
                                @Html.DisplayFor(modelItem => item.CodigoProfesor)
                            </td>
                            <td style="align-items:center">
                                <a name="btnEditarDepartamento" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-edit"></i></a>
                                <a name="btnEliminarDepartamento" data-id="@item.Codigo" style="color: #1A2DF3"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div id="modalAgregarDepartamento" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Departamento</h4>
                </div>
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <div>
                        <label for="exampleInputEmail1">Código de Departamento:</label>
                        <input class="form-control" id="IDAgregarDepartamentoCodigo" disabled placeholder="Sin asignar">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el nombre:</label>
                        <input class="form-control" id="IDAgregarDepartamentoNombre">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite los nombre del director:</label>
                        <input class="form-control" id="IDAgregarDepartamentoNombreDirector">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el horario de atencion:</label>
                        <input class="form-control" id="IDAgregarDepartamentoHorarioAtencion">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el aula de atencion:</label>
                        <input class="form-control" id="IDAgregarDepartamentoAulaAtencion">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el codigo de profesor:</label>
                        <input class="form-control" id="IDAgregarDepartamentoCodigoProfesor">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="exampleInputEmail1">Digite el estado:</label>
                        <select id="IDAgregarDepartamentoEstado" class="select form-control">
                            <option value="Activo" selected>Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnCancelarDepartamento' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button id='btnAgregarDepartamento' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaExitosa" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>Transacción realizada exitosamente</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnMensajeExitoso' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaEliminarDepartamento" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>¿Está seguro que desea eliminar el estudiante?</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnAceptarEliminarDepartamentoConfirmacion' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                    <button id='btnCancelarEliminarDepartamentoConfirmacion' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

